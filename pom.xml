<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>hung.com</groupId>
	<artifactId>VertxTest</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<!-- vertx 3.7.0 need Netty Lib -->
		<!-- vertx 3.4.2 ko can Netty -->
		<dependency>
			<groupId>io.netty</groupId>
			<artifactId>netty-all</artifactId>
			<version>4.1.36.Final</version>
		</dependency>

		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-core</artifactId>
			<!-- version 3.4.2 change name of some function -->
			<version>3.7.0</version>
		</dependency>
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-jdbc-client</artifactId>
			<version>3.7.0</version>
		</dependency>

		<!-- Client -->

		<dependency>
			<groupId>com.squareup.okhttp3</groupId>
			<artifactId>okhttp</artifactId>
			<version>3.9.1</version>
		</dependency>
	</dependencies>

	<build>
		<!-- -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<!-- include all lib(*.jar) to output jar file -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.1.1</version>

				<executions>
					<!-- create *.jar 1 file here -->
					<execution>
						<!-- id phải duy nhất -->
						<id>build-1</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<!-- MainClass in mainfest make a executable jar -->
							<archive>
								<manifest>
									<addClasspath>true</addClasspath>
									<mainClass>hung.com.tcp.streams.App92_TcpServer_stream</mainClass>
								</manifest>
							</archive>
							<!-- get all project dependencies -->
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
							<finalName>App92_TcpServer_stream.jar</finalName>
						</configuration>
					</execution>
					
					<!-- create *.jar 2 file here -->
					<!-- <execution> id phải duy nhất <id>build-2</id> <phase>package</phase> 
						<goals> <goal>single</goal> </goals> <configuration> <archive> <manifest> 
						<addClasspath>true</addClasspath> <mainClass>hung.com.http.server.App62_HttpServerHandler</mainClass> 
						</manifest> </archive> <descriptorRefs> <descriptorRef>jar-with-dependencies</descriptorRef> 
						</descriptorRefs> <finalName>App62_HttpServerHandler.jar</finalName> </configuration> 
						</execution> -->
				</executions>
			</plugin>
		</plugins>

	</build>
</project>